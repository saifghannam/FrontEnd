<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/wNew"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"

        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        >

        <ImageButton
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:background="@color/cardview_shadow_end_color"
            app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30dp"
            android:paddingStart="45dp"
            android:text="Dollar Wallet" />

        <ImageButton
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/cardview_shadow_end_color"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/baseline_settings_24" />

    </LinearLayout>

    <LinearLayout
         android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="200dp"
        android:background="@drawable/shaperectangle"

        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

     >

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="112dp"
        android:layout_height="71dp"
        android:layout_weight="1"
        android:paddingTop="5dp"


        app:srcCompat="@drawable/bit" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="2dp"
        android:text="Dollar"
        android:paddingTop="30dp"
        android:textSize="25dp" />
    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="$120,500"
    android:textSize="40dp"
    android:fontFamily="sans-serif-medium"
    android:paddingStart="40dp"
    />


</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+49,89%"
                android:textSize="20dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/shapebacgrond"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="20dp"
                android:layout_marginStart="40dp"
                android:paddingEnd="9dp"
                android:textColor="@color/white"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:background="@color/cardview_shadow_end_color"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingStart="200dp"
                app:srcCompat="@drawable/baseline_keyboard_arrow_down_24" />


        </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        >

        <Button
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:background="@color/cardview_shadow_end_color"
            android:textColor="@color/black"
            />
        <Button
            android:id="@+id/frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week"
            android:background="@color/cardview_shadow_end_color"
            android:textColor="@color/black"
            />    <Button
        android:id="@+id/miothId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:background="@color/cardview_shadow_end_color"
        android:textColor="@color/black"
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Years"
            android:background="@color/cardview_shadow_end_color"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="200dp"
        android:background="@drawable/shaperectangle"

        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:textSize="20dp"
                android:layout_marginStart="40dp"
                /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:layout_marginStart="190dp"
            />
    </LinearLayout>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            app:srcCompat="@drawable/chart" />

    </LinearLayout>
</LinearLayout>